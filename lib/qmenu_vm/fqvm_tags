tags=0

while [ -n "$tags" ]; do

	tags=$(qvm-tags "$qube" list |\
		dmenu -l 15 -p "$qube:" | cut -f1 -d\ )

	if [ -n "$tags" ]; then

		for tag in $tags; do

			if qvm-tags "$qube" list | grep -q "^$tag$"; then

				answer=$(printf "No\nYes" |\
					dmenu -i -p "Remove tag '$tag' from $qube?")

				if [ "$answer" = "Yes" ]; then

					qvm-tags "$qube" del "$tag"
				fi
			else

				qvm-tags "$qube" add "$tag"
			fi
		done
	fi
done
