user=$(printf "Default user\nRoot" | dmenu -i -l 2 -p "Run commands as:") &&

	if [ "$user" = "Root" ]; then

		as_root="-u root"
		user='#'
	else

		user='$'
	fi

	commandtr=0

	while [ -n "$commandtr" ]; do

		commandtr=$(: | dmenu -p "($user)Run command in $qube:") &&

			qvm-run -q $as_root "$qube" "$commandtr"&
	done
